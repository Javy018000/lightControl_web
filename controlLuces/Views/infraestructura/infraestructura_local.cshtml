@model List<controlLuces.Models.infraestructuraModel>
@{
    ViewBag.Title = "Infraestructura (mi municipio)";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var muni = (string)Session["Municipio"] ?? "N/D";
}

<div class="container mt-4">
    <div class="p-3 rounded mb-3" style="background:linear-gradient(135deg,#0ea5e9,#3b82f6);color:#fff;">
        <h3 class="m-0"><i class="fas fa-city"></i> Infraestructura — Municipio: @muni</h3>
    </div>

    <div class="d-flex align-items-center mb-3">
        <form method="get" action="@Url.Action("verinfraestructura_local","infraestructura")" class="form-inline">
            <label class="mr-2">Tipo:</label>
            <select name="tipo" class="form-control mr-2">
                <option value="">(todos)</option>
                <option value="LED" @(Request["tipo"] == "LED" ? "selected" : "")>LED</option>
                <option value="SODIO" @(Request["tipo"] == "SODIO" ? "selected" : "")>SODIO</option>
            </select>
            <button type="submit" class="btn btn-primary"><i class="fas fa-filter"></i> Filtrar</button>
        </form>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Código</th>
                    <th>Latitud</th>
                    <th>Longitud</th>
                    <th>Línea</th>
                    <th>Tipo</th>
                    <th>Barrio</th>
                    <th>Dirección</th>
                    <th style="width:120px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var i in Model)
                    {
                        <tr>
                            <td>@i.codigo</td>
                            <td>@i.latitud</td>
                            <td>@i.longitud</td>
                            <td>@i.linea</td>
                            <td>@i.tipo</td>
                            <td>@i.barrio</td>
                            <td>@i.direccion</td>
                            <td>
                                <a class="btn btn-sm btn-primary" href="@Url.Action("VerInfo","infraestructura", new { id = i.codigo })">
                                    <i class="fas fa-eye"></i> Ver info
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted">No hay registros en tu municipio.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
