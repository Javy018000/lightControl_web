@{
    ViewBag.Title = "Registro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <title>@ViewBag.Title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

    <style>
        body {
            font-family: 'Segoe UI', Arial, sans-serif;
            background-color: #f4f8fb;
            padding: 30px;
        }

        .main-header {
            background: linear-gradient(135deg, #0ea5e9, #3b82f6);
            color: #fff;
            border-radius: 14px;
            padding: 18px 25px;
            box-shadow: 0 10px 24px rgba(2, 8, 23, 0.12);
            font-size: 26px;
            font-weight: 800;
            text-align: center;
            margin-bottom: 30px;
            text-transform: uppercase;
            letter-spacing: .6px;
        }

        .form-card {
            background: #fff;
            border-radius: 14px;
            box-shadow: 0 8px 22px rgba(2, 8, 23, 0.08);
            padding: 30px 40px;
            max-width: 850px;
            margin: 0 auto;
        }

        label {
            font-weight: 600;
            color: #334155;
        }

        input.form-control, select.form-control {
            border-radius: 10px;
            border: 1px solid #dbe6f5;
            box-shadow: 0 2px 6px rgba(2, 8, 23, 0.05) inset;
            transition: .2s;
        }

            input.form-control:focus, select.form-control:focus {
                border-color: #3b82f6;
                box-shadow: 0 0 0 3px rgba(59,130,246,.15);
            }

        .btn-guardar {
            background: linear-gradient(135deg, #3b82f6, #0ea5e9);
            border: none;
            color: #fff;
            font-weight: 700;
            padding: 12px 25px;
            border-radius: 12px;
            width: 100%;
            box-shadow: 0 10px 18px rgba(59,130,246,.22);
            transition: .15s;
        }

            .btn-guardar:hover {
                transform: translateY(-1px);
                box-shadow: 0 14px 22px rgba(59,130,246,.28);
            }

        .asterisco {
            color: orange;
            font-weight: bold;
        }

        small.muted {
            color: #64748b;
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <div class="main-header">
            <i class="fas fa-user-plus"></i> Registro de Usuario
        </div>

        <div class="form-card">

            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            }

            <form action="@Url.Action("Registrar", "Login")" method="post" id="registroForm" novalidate>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>Nombre <span class="asterisco">*</span></label>
                        <input type="text" name="Nombre" class="form-control" required />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label>Apellido <span class="asterisco">*</span></label>
                        <input type="text" name="Apellido" class="form-control" required />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>Correo <span class="asterisco">*</span></label>
                        <input type="email" name="Correo" class="form-control" required />
                        <small class="muted">Nunca compartiremos su correo.</small>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label>Cédula <span class="asterisco">*</span></label>
                        <input type="text" name="IdUsuario" class="form-control" required />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>Contraseña <span class="asterisco">*</span></label>
                        <input type="password" name="Clave" class="form-control" required />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label>Rol <span class="asterisco">*</span></label>
                        <select class="form-control" id="IdRol" name="IdRol" required>
                            <option value="">Seleccionar</option>
                            <option value="1">Administrador</option>
                            <option value="2">Técnico</option>
                            <option value="3">Usuario</option>
                            <option value="4">Administrador Local</option>
                        </select>
                        <small class="muted">Administrador Local requiere municipio.</small>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>Municipio</label>
                        <select class="form-control" id="Municipio" name="Municipio">
                            <option value="">Seleccionar</option>
                            <option value="Madrid">Madrid</option>
                            <option value="Chía">Chía</option>
                        </select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label>Cuadrilla</label>
                        <select class="form-control" id="Cuadrilla" name="Cuadrilla">
                            <option value="">Primero selecciona un municipio</option>
                        </select>
                        <small class="muted">Campo opcional.</small>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-guardar">
                        <i class="fas fa-user-plus"></i> Registrar
                    </button>
                </div>

            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        (function () {
            var rol = document.getElementById('IdRol');
            var municipio = document.getElementById('Municipio');
            var cuadrilla = document.getElementById('Cuadrilla');

            function toggleMunicipioRequired() {
                municipio.required = (rol.value === '4');
            }

            rol.addEventListener('change', toggleMunicipioRequired);
            toggleMunicipioRequired();

            $(municipio).on('change', function () {
                var muni = $(this).val();
                var $c = $(cuadrilla);
                $c.empty();

                if (!muni) {
                    $c.append('<option value="">Primero selecciona un municipio</option>');
                    return;
                }

                $c.append('<option>Cargando...</option>');

                $.get('@Url.Action("ObtenerCuadrillasPorMunicipio","Login")',
                    { municipio: muni },
                    function (data) {
                        $c.empty();
                        $c.append('<option value="">Seleccionar cuadrilla (opcional)</option>');
                        if (data && data.length) {
                            $.each(data, function (_, item) {
                                $c.append('<option value="' + item.nombre + '">' + item.nombre + '</option>');
                            });
                        } else {
                            $c.append('<option value="">No hay cuadrillas</option>');
                        }
                    });
            });
        })();
    </script>
</body>
</html>
