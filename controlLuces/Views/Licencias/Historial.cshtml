@model IEnumerable<controlLuces.Models.LicenciaHistorialModel>
@{
    ViewBag.Title = "Historial de Validaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .historial-container {
        padding: 30px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title {
        font-size: 28px;
        font-weight: 700;
        color: #1e293b;
    }

    .btn-volver {
        padding: 12px 24px;
        border-radius: 999px;
        font-weight: 600;
        border: none;
        background: linear-gradient(135deg, #64748b, #475569);
        color: #fff;
        text-decoration: none;
        transition: all 0.2s;
    }

    .btn-volver:hover {
        filter: brightness(1.1);
        color: #fff;
        text-decoration: none;
    }

    .tabla-historial {
        width: 100%;
        background: #fff;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
    }

    .tabla-historial th {
        background: #f8fafc;
        padding: 16px;
        text-align: left;
        font-weight: 600;
        color: #475569;
        font-size: 13px;
        text-transform: uppercase;
    }

    .tabla-historial td {
        padding: 16px;
        border-bottom: 1px solid #f1f5f9;
    }

    .tabla-historial tr:hover {
        background: #f8fafc;
    }

    .badge {
        padding: 6px 12px;
        border-radius: 999px;
        font-size: 12px;
        font-weight: 600;
    }

    .badge-exitosa { background: #dcfce7; color: #166534; }
    .badge-fallida { background: #fee2e2; color: #991b1b; }
    .badge-expirada { background: #fef3c7; color: #92400e; }

    .sin-registros {
        text-align: center;
        padding: 60px;
        color: #64748b;
    }

    .sin-registros i {
        font-size: 48px;
        margin-bottom: 20px;
        opacity: 0.5;
    }
</style>

<div class="historial-container">
    <div class="page-header">
        <h1 class="page-title">Historial de Validaciones</h1>
        <a href="@Url.Action("Index", "Licencias")" class="btn-volver">
            <i class="fas fa-arrow-left"></i> Volver a Licencias
        </a>
    </div>

    @if (Model.Any())
    {
        <table class="tabla-historial">
            <thead>
                <tr>
                    <th>Fecha y Hora</th>
                    <th>Usuario</th>
                    <th>IP</th>
                    <th>Resultado</th>
                    <th>Detalle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    string badgeClass = "badge-exitosa";
                    if (item.Resultado == "Fallida") badgeClass = "badge-fallida";
                    else if (item.Resultado == "Expirada") badgeClass = "badge-expirada";

                    <tr>
                        <td>@item.FechaValidacion.ToString("dd/MM/yyyy HH:mm:ss")</td>
                        <td>@item.Usuario</td>
                        <td><code>@item.IP</code></td>
                        <td><span class="badge @badgeClass">@item.Resultado</span></td>
                        <td>@item.Detalle</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="sin-registros">
            <i class="fas fa-history"></i>
            <p>No hay registros de validaci√≥n para esta licencia.</p>
        </div>
    }
</div>
