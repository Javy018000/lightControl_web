@model controlLuces.Models.LicenciaModel
@{
    ViewBag.Title = "Nueva Licencia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-container {
        padding: 30px;
        max-width: 800px;
        margin: 0 auto;
    }

    .form-card {
        background: #fff;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }

    .form-title {
        font-size: 28px;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 30px;
        text-align: center;
    }

    .form-section {
        margin-bottom: 30px;
    }

    .section-title {
        font-size: 16px;
        font-weight: 600;
        color: #6366f1;
        margin-bottom: 15px;
        padding-bottom: 8px;
        border-bottom: 2px solid #e2e8f0;
    }

    .form-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        margin-bottom: 8px;
        font-weight: 600;
        color: #475569;
        font-size: 14px;
    }

    .form-group label .required {
        color: #ef4444;
    }

    .form-control {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        font-size: 16px;
        transition: border-color 0.2s;
    }

    .form-control:focus {
        outline: none;
        border-color: #6366f1;
    }

    textarea.form-control {
        min-height: 100px;
        resize: vertical;
    }

    .checkbox-group {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 10px;
    }

    .checkbox-item {
        display: flex;
        align-items: center;
        padding: 10px;
        background: #f8fafc;
        border-radius: 8px;
    }

    .checkbox-item input {
        margin-right: 10px;
        width: 18px;
        height: 18px;
    }

    .checkbox-item label {
        margin: 0;
        font-weight: 500;
        cursor: pointer;
    }

    .btn-group {
        display: flex;
        gap: 15px;
        justify-content: center;
        margin-top: 30px;
    }

    .btn-guardar {
        padding: 14px 40px;
        border-radius: 999px;
        font-weight: 600;
        font-size: 16px;
        border: none;
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        color: #fff;
        cursor: pointer;
        box-shadow: 0 10px 22px rgba(99,102,241,.34);
        transition: all 0.2s;
    }

    .btn-guardar:hover {
        filter: brightness(1.05);
        transform: translateY(-1px);
    }

    .btn-cancelar {
        padding: 14px 40px;
        border-radius: 999px;
        font-weight: 600;
        font-size: 16px;
        border: 2px solid #e2e8f0;
        background: #fff;
        color: #64748b;
        text-decoration: none;
        transition: all 0.2s;
    }

    .btn-cancelar:hover {
        background: #f8fafc;
        text-decoration: none;
        color: #64748b;
    }

    .error-message {
        background: #fee2e2;
        color: #991b1b;
        padding: 16px;
        border-radius: 12px;
        margin-bottom: 20px;
    }
</style>

<div class="form-container">
    <div class="form-card">
        <h1 class="form-title">Nueva Licencia</h1>

        @if (ViewBag.Error != null)
        {
            <div class="error-message">
                <i class="fas fa-exclamation-circle"></i> @ViewBag.Error
            </div>
        }

        @using (Html.BeginForm("Crear", "Licencias", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-section">
                <h3 class="section-title">Información del Cliente</h3>
                <div class="form-row">
                    <div class="form-group">
                        <label>Municipio <span class="required">*</span></label>
                        @Html.TextBoxFor(m => m.Municipio, new { @class = "form-control", placeholder = "Ej: Tabio", required = "required" })
                    </div>
                    <div class="form-group">
                        <label>Nombre del Cliente <span class="required">*</span></label>
                        @Html.TextBoxFor(m => m.NombreCliente, new { @class = "form-control", placeholder = "Ej: Alcaldía Municipal de...", required = "required" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label>NIT</label>
                        @Html.TextBoxFor(m => m.NIT, new { @class = "form-control", placeholder = "Ej: 800.000.000-1" })
                    </div>
                    <div class="form-group">
                        <label>Contacto</label>
                        @Html.TextBoxFor(m => m.Contacto, new { @class = "form-control", placeholder = "Nombre del contacto principal" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label>Email</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", placeholder = "correo@municipio.gov.co" })
                    </div>
                    <div class="form-group">
                        <label>Teléfono</label>
                        @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control", placeholder = "(601) 000-0000" })
                    </div>
                </div>
            </div>

            <div class="form-section">
                <h3 class="section-title">Configuración de Licencia</h3>
                <div class="form-row">
                    <div class="form-group">
                        <label>Fecha de Inicio</label>
                        @Html.TextBoxFor(m => m.FechaInicio, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                    </div>
                    <div class="form-group">
                        <label>Fecha de Expiración</label>
                        @Html.TextBoxFor(m => m.FechaExpiracion, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label>Máximo de Usuarios</label>
                        @Html.TextBoxFor(m => m.MaxUsuarios, new { @class = "form-control", type = "number", min = "1", max = "1000" })
                    </div>
                    <div class="form-group">
                        <label>Estado</label>
                        @Html.DropDownListFor(m => m.Estado, new List<SelectListItem>
                        {
                            new SelectListItem { Text = "Activa", Value = "Activa" },
                            new SelectListItem { Text = "Suspendida", Value = "Suspendida" }
                        }, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="form-section">
                <h3 class="section-title">Módulos Permitidos</h3>
                <div class="checkbox-group">
                    <div class="checkbox-item">
                        <input type="checkbox" id="mod_pqrs" name="modulos" value="PQRS" checked />
                        <label for="mod_pqrs">PQRS</label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="mod_ordenes" name="modulos" value="Ordenes" checked />
                        <label for="mod_ordenes">Órdenes</label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="mod_infra" name="modulos" value="Infraestructura" checked />
                        <label for="mod_infra">Infraestructura</label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="mod_postes" name="modulos" value="Postes" checked />
                        <label for="mod_postes">Postes</label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="mod_cajas" name="modulos" value="Cajas" checked />
                        <label for="mod_cajas">Cajas</label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="mod_archivos" name="modulos" value="Archivos" checked />
                        <label for="mod_archivos">Archivos</label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="mod_consumos" name="modulos" value="Consumos" checked />
                        <label for="mod_consumos">Consumos</label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="mod_usuarios" name="modulos" value="Usuarios" checked />
                        <label for="mod_usuarios">Usuarios</label>
                    </div>
                </div>
                @Html.HiddenFor(m => m.ModulosPermitidos, new { id = "modulosPermitidos" })
            </div>

            <div class="form-section">
                <h3 class="section-title">Observaciones</h3>
                <div class="form-group">
                    @Html.TextAreaFor(m => m.Observaciones, new { @class = "form-control", placeholder = "Notas adicionales sobre esta licencia..." })
                </div>
            </div>

            <div class="btn-group">
                <a href="@Url.Action("Index", "Licencias")" class="btn-cancelar">Cancelar</a>
                <button type="submit" class="btn-guardar" onclick="prepararModulos()">
                    <i class="fas fa-save"></i> Crear Licencia
                </button>
            </div>
        }
    </div>
</div>

<script>
    function prepararModulos() {
        var checkboxes = document.querySelectorAll('input[name="modulos"]:checked');
        var modulos = [];
        checkboxes.forEach(function(cb) {
            modulos.push(cb.value);
        });
        document.getElementById('modulosPermitidos').value = modulos.join(',');
    }
</script>
