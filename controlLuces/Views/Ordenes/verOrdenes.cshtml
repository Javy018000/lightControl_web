@model List<controlLuces.Models.OrdenModel>
@using controlLuces.Models

@{
    ViewBag.Title = "verOrdenes";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Response.Charset = "UTF-8";
    Response.ContentEncoding = System.Text.Encoding.UTF8;

    var usuario = Session["Usuario"] as UsuarioModel;
    var muni = (Session["Municipio"] as string) ?? usuario?.Municipio;
    var k = (muni ?? "").Trim().ToLower().Replace("í", "i");
    var prefijo = k == "madrid" ? "MA" : k == "chia" ? "CH" : "CH";
    var year = DateTime.Now.Year;

    bool esAdminLocal = ViewBag.EsAdminLocal != null && (bool)ViewBag.EsAdminLocal;
    List<PqrsModel> pqrsList = ViewBag.PqrsList as List<PqrsModel> ?? new List<PqrsModel>();

    var urlAtras = esAdminLocal
        ? Url.Action("inicio_local", "Home")
        : Url.Action("inicio", "Home");
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ver todas las órdenes de servicio</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Product+Sans&display=swap" rel="stylesheet">

    <style>
        :root {
            --c1: #0ea5e9;
            --c2: #3b82f6;
            --bg: #f4f8fb;
            --ink: #0f172a;
        }

        body {
            font-family: 'Product Sans',system-ui,Segoe UI,Arial,sans-serif;
            background: var(--bg);
            padding: 20px;
            color: var(--ink);
        }

        .main-header {
            background: linear-gradient(135deg,var(--c1),var(--c2));
            color: #fff;
            border-radius: 14px;
            padding: 18px 25px;
            box-shadow: 0 10px 24px rgba(2,8,23,.12);
            font-size: 28px;
            font-weight: 800;
            text-align: center;
            margin-bottom: 25px;
            text-transform: uppercase;
            letter-spacing: .6px;
        }

        .cards-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill,minmax(260px,1fr));
            gap: 18px;
        }

        .card {
            background: #fff;
            border: none;
            border-radius: 14px;
            overflow: hidden;
            box-shadow: 0 10px 22px rgba(2,8,23,.08);
            transition: transform .18s ease, box-shadow .18s ease;
        }

            .card:hover {
                transform: translateY(-3px);
                box-shadow: 0 16px 30px rgba(2,8,23,.12);
            }

        .card-header {
            background: linear-gradient(135deg,var(--c2),var(--c1));
            color: #fff;
            border: none;
            font-weight: 800;
            font-size: 18px;
        }

        .card-body p {
            margin-bottom: .45rem;
            text-align: left;
        }

        .card-footer {
            background: #fff;
            border-top: 1px solid #eef2f8;
            display: flex;
            gap: 8px;
            justify-content: center;
        }

        .btn-primary {
            background: linear-gradient(135deg,var(--c2),var(--c1));
            border: none;
            font-weight: 700;
            border-radius: 10px;
            padding: 8px 14px;
            box-shadow: 0 8px 18px rgba(59,130,246,.25);
        }

        .btn-danger {
            border-radius: 10px;
            padding: 8px 14px;
            font-weight: 700;
        }

        .back-wrapper {
            margin-top: 24px;
            text-align: center;
        }

        .btn-export {
            padding: 10px 24px;
            border-radius: 999px;
            font-weight: 700;
            border: none;
            background: linear-gradient(135deg, #dc2626, #b91c1c);
            color: #fff;
            text-decoration: none;
            display: inline-block;
            box-shadow: 0 10px 22px rgba(220,38,38,.34);
            margin-right: 10px;
            transition: filter 0.15s, transform 0.15s;
        }

        .btn-export:hover {
            filter: brightness(1.05);
            transform: translateY(-1px);
            color: #fff;
        }

        .btn-excel {
            padding: 10px 24px;
            border-radius: 999px;
            font-weight: 700;
            border: none;
            background: linear-gradient(135deg, #16a34a, #15803d);
            color: #fff;
            text-decoration: none;
            display: inline-block;
            box-shadow: 0 10px 22px rgba(22,163,74,.34);
            margin-right: 10px;
            transition: filter 0.15s, transform 0.15s;
        }

        .btn-excel:hover {
            filter: brightness(1.05);
            transform: translateY(-1px);
            color: #fff;
        }

        .btn-back {
            padding: 8px 24px;
            border-radius: 999px;
            font-weight: 600;
            border: none;
            background: linear-gradient(135deg, #fb7185, #ef4444);
            color: #fff;
            text-decoration: none;
            display: inline-block;
            box-shadow: 0 10px 22px rgba(248,113,113,.34);
            transition: filter 0.15s, transform 0.15s;
        }

        .btn-back:hover {
            filter: brightness(1.05);
            transform: translateY(-1px);
            color: #fff;
        }

        /* Contador de tiempo */
        .tiempo-orden {
            background: linear-gradient(135deg, #f59e0b, #d97706);
            color: #fff;
            padding: 8px 12px;
            border-radius: 10px;
            font-size: 13px;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 8px;
            margin-top: 10px;
        }

        .tiempo-orden i {
            font-size: 16px;
        }

        .tiempo-orden .tiempo-valor {
            font-family: 'Consolas', 'Monaco', monospace;
            font-size: 14px;
            letter-spacing: 0.5px;
        }

        .tiempo-orden.tiempo-urgente {
            background: linear-gradient(135deg, #ef4444, #dc2626);
            animation: pulse-urgente 2s infinite;
        }

        .tiempo-orden.tiempo-normal {
            background: linear-gradient(135deg, #22c55e, #16a34a);
        }

        @@keyframes pulse-urgente {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.8; }
        }
    </style>
</head>
<body>
    <div class="container-fluid px-2 px-md-3">
        <div class="main-header">
            <i class="fas fa-hard-hat me-2"></i> Órdenes de Servicio Activas
        </div>

        <div class="cards-grid">
            @* ========== MOSTRAR ÓRDENES DE SERVICIO ========== *@
            @foreach (var Orden in Model.OrderBy(o => o.FechaARealizar))
            {
                <div class="card">
                    <div class="card-header">
                        @(
                            string.IsNullOrWhiteSpace(Orden.CodigoOrden)
                                ? (prefijo + year + "-" + Orden.IdOrden)
                                : Orden.CodigoOrden
                        )
                    </div>
                    <div class="card-body">
                        <p><strong>Estado:</strong> <span class="badge bg-success">@Orden.EstadoNombre</span></p>
                        <p><strong>Fecha:</strong> @Orden.FechaARealizar.ToString("dd/MM/yyyy")</p>
                        <p><strong>Descripción:</strong> @Orden.ProblemaRelacionado</p>
                        <p><strong>PQRS Relacionada:</strong> @Orden.ElementoRelacionado</p>
                        <p><strong>Cuadrilla:</strong> @Orden.Cuadrilla</p>

                        @{
                            var fechaInicio = Orden.FechaARealizar;
                            var ahora = DateTime.Now;
                            var diferencia = ahora - fechaInicio;
                            var dias = (int)diferencia.TotalDays;
                            var horas = diferencia.Hours;
                            var minutos = diferencia.Minutes;
                            var claseUrgencia = dias >= 3 ? "tiempo-urgente" : dias >= 1 ? "" : "tiempo-normal";
                        }
                        <div class="tiempo-orden @claseUrgencia"
                             data-fecha-inicio="@fechaInicio.ToString("yyyy-MM-ddTHH:mm:ss")">
                            <i class="fas fa-clock"></i>
                            <span>Tiempo activo:</span>
                            <span class="tiempo-valor">
                                @if (dias > 0)
                                {
                                    @(dias + "d " + horas + "h " + minutos + "m")
                                }
                                else if (horas > 0)
                                {
                                    @(horas + "h " + minutos + "m")
                                }
                                else
                                {
                                    @(minutos + "m")
                                }
                            </span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="@Url.Action("verinfo", "Ordenes", new { id = Orden.IdOrden })"
                           class="btn btn-primary btn-sm">
                            <i class="fas fa-info-circle"></i> Ver info
                        </a>
                    </div>
                </div>
            }

            @* ========== MOSTRAR PQRS (ESTADO 1 Y 2) ========== *@
            @foreach (var pqrs in pqrsList)
            {
                var codigoPqrs = prefijo + year + ":" + pqrs.Idpqrs;
                <div class="card">
                    <div class="card-header">
                        @codigoPqrs
                    </div>
                    <div class="card-body">
                        <p><strong>Estado:</strong> @pqrs.EstadoNombre</p>
                        <p><strong>Fecha:</strong> @pqrs.FechaRegistro</p>
                        <p><strong>Tipo:</strong> @pqrs.Tipopqrs</p>
                        <p><strong>Canal:</strong> @pqrs.Canal</p>
                        <p><strong>Dirección:</strong> @pqrs.DireccionAfectacion</p>
                        <p><strong>Descripción:</strong> @pqrs.DescripcionAfectacion</p>
                    </div>
                    <div class="card-footer">
                        <a href="@Url.Action("VerInfo", "pqrs", new { id = pqrs.Idpqrs })"
                           class="btn btn-primary btn-sm">
                            <i class="fas fa-info-circle"></i> Ver info
                        </a>
                    </div>
                </div>
            }
        </div>

        <div class="back-wrapper">
            <a href="@Url.Action("DescargarOrdenesExcel", "Ordenes")" class="btn-excel">
                <i class="fas fa-file-excel me-1"></i> Exportar a Excel
            </a>
            <a href="@Url.Action("DescargarOrdenesPDF", "Ordenes")" class="btn-export">
                <i class="fas fa-file-pdf me-1"></i> Descargar PDF
            </a>
            <a href="@Url.Action("inicio","login")" class="btn-back">
                <i class="fas fa-arrow-left me-1"></i> Atrás
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(function () {
            $('.delete-orden').on('click', function () {
                var ordenId = $(this).data('id');
                var idpqrs = $(this).data('idpqrs');

                Swal.fire({
                    title: '¿Estás seguro?',
                    text: '¡No podrás revertir esto!',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Sí, eliminarlo!'
                }).then((result) => {
                    if (!result.isConfirmed) return;

                    $.ajax({
                        url: '@Url.Action("eliminarOrden", "Ordenes")',
                        type: 'POST',
                        data: { id: ordenId, idpqrs: idpqrs },
                        success: function () {
                            window.location.reload();
                        }
                    });
                });
            });

            // Actualizar contadores de tiempo en tiempo real
            function actualizarContadores() {
                $('.tiempo-orden').each(function () {
                    var $this = $(this);
                    var fechaInicio = new Date($this.data('fecha-inicio'));
                    var ahora = new Date();
                    var diferencia = ahora - fechaInicio;

                    // Calcular dias, horas y minutos
                    var totalMinutos = Math.floor(diferencia / 60000);
                    var totalHoras = Math.floor(totalMinutos / 60);
                    var dias = Math.floor(totalHoras / 24);
                    var horas = totalHoras % 24;
                    var minutos = totalMinutos % 60;

                    // Formatear el tiempo
                    var tiempoTexto = '';
                    if (dias > 0) {
                        tiempoTexto = dias + 'd ' + horas + 'h ' + minutos + 'm';
                    } else if (horas > 0) {
                        tiempoTexto = horas + 'h ' + minutos + 'm';
                    } else {
                        tiempoTexto = minutos + 'm';
                    }

                    // Actualizar el texto
                    $this.find('.tiempo-valor').text(tiempoTexto);

                    // Actualizar clase de urgencia
                    $this.removeClass('tiempo-urgente tiempo-normal');
                    if (dias >= 3) {
                        $this.addClass('tiempo-urgente');
                    } else if (dias < 1) {
                        $this.addClass('tiempo-normal');
                    }
                });
            }

            // Actualizar cada minuto
            setInterval(actualizarContadores, 60000);
        });
    </script>
</body>
</html>
