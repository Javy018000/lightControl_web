@model List<controlLuces.Models.PosteModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <title>Postes - Light Control</title>

    <!-- Mismas librerías que en Cajas -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />

    <style>
        body {
            font-family: 'Segoe UI', Arial, sans-serif;
            background-color: #f4f8fb;
            padding: 20px;
        }

        /* --- HEADER (igual a Cajas) --- */
        .main-header {
            background: linear-gradient(135deg, #0ea5e9, #3b82f6);
            color: #fff;
            border-radius: 14px;
            padding: 18px 25px;
            box-shadow: 0 10px 24px rgba(2, 8, 23, 0.12);
            font-size: 28px;
            font-weight: 800;
            text-align: center;
            margin-bottom: 25px;
            text-transform: uppercase;
            letter-spacing: .6px;
        }

        /* --- FILTRO + BUSCADOR (mismo estilo que Cajas) --- */
        .control-bar {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 12px;
            flex-wrap: wrap;
            margin-bottom: 25px;
        }

            .control-bar input,
            .control-bar select {
                padding: 12px 14px;
                border-radius: 12px;
                border: 1px solid #dbe6f5;
                background: #fff;
                box-shadow: 0 2px 6px rgba(2, 8, 23, 0.05) inset;
                transition: 0.2s;
            }

                .control-bar input:focus,
                .control-bar select:focus {
                    outline: none;
                    border-color: #3b82f6;
                    box-shadow: 0 0 0 3px rgba(59, 130, 246, .15);
                }

            .control-bar input {
                width: min(560px, 85vw);
            }

            .control-bar button {
                background: linear-gradient(135deg, #3b82f6, #0ea5e9);
                border: none;
                color: #fff;
                font-weight: 700;
                padding: 12px 20px;
                border-radius: 12px;
                cursor: pointer;
                transition: .15s;
                box-shadow: 0 10px 18px rgba(59,130,246,.22);
            }

                .control-bar button:hover {
                    transform: translateY(-1px);
                    box-shadow: 0 14px 22px rgba(59,130,246,.28);
                }

        /* --- CONTENEDOR PRINCIPAL --- */
        .content {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            gap: 25px;
        }

        /* --- TARJETA DE TABLA --- */
        .table-card {
            background: #fff;
            border-radius: 14px;
            box-shadow: 0 8px 22px rgba(2, 8, 23, 0.08);
            padding: 16px;
            flex: 1 1 55%;
            max-height: 640px; /* límite de alto */
            overflow-y: auto; /* scroll vertical */
        }

            .table-card::-webkit-scrollbar {
                width: 10px;
            }

            .table-card::-webkit-scrollbar-thumb {
                background: #dbe6f5;
                border-radius: 10px;
            }

            .table-card::-webkit-scrollbar-track {
                background: transparent;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            font-size: 15px;
            margin: 0;
        }

        thead {
            background: #f3f7fc;
            color: #334155;
        }

            thead th {
                position: sticky;
                top: 0;
                z-index: 2; /* encabezado pegado */
                border-bottom: 1px solid #e6edf5;
            }

        th, td {
            padding: 10px 8px;
            text-align: center;
            vertical-align: middle;
            border-bottom: 1px solid #f1f5fb;
        }

        tbody tr:nth-child(even) {
            background-color: #fcfdff;
        }

        tbody tr:hover {
            background-color: #f3f9ff;
            transition: .2s;
        }

        /* Botón "Ver info" (igual look) */
        .btn-info {
            background: linear-gradient(135deg, #3b82f6, #0ea5e9) !important;
            border: none !important;
            color: #fff !important;
            font-weight: 700;
            border-radius: 10px;
            padding: 8px 14px;
            box-shadow: 0 8px 18px rgba(59,130,246,.25);
        }

            .btn-info:hover {
                filter: brightness(1.03);
                transform: translateY(-1px);
            }

        /* --- MAPA --- */
        .map-card {
            background: #fff;
            border-radius: 14px;
            box-shadow: 0 8px 22px rgba(2, 8, 23, 0.08);
            padding: 16px;
            flex: 1 1 43%;
            height: 640px;
        }

        #map {
            width: 100%;
            height: 100%;
            border-radius: 12px;
        }

        /* Responsive */
        @@media (max-width: 992px) {
            .table-card, .map-card {
                flex: 1 1 100%;
                max-height: 520px;
            }
        }
        /* BOTONES EXPORTAR Y ATRÁS */
        .btn-excel {
            background: linear-gradient(135deg, #10b981, #059669);
            border: none;
            color: #fff;
            font-weight: 700;
            border-radius: 12px;
            padding: 12px 24px;
            box-shadow: 0 8px 20px rgba(16,185,129,.25);
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .btn-excel:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 24px rgba(16,185,129,.35);
                background: linear-gradient(135deg, #059669, #047857);
                color: #fff;
            }

            .btn-excel i {
                margin-right: 8px;
            }

        .btn-back {
            background: linear-gradient(135deg, #ef4444, #dc2626);
            border: none;
            color: #fff;
            font-weight: 700;
            border-radius: 12px;
            padding: 12px 24px;
            box-shadow: 0 8px 20px rgba(239,68,68,.25);
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
        }

            .btn-back:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 24px rgba(239,68,68,.35);
                background: linear-gradient(135deg, #dc2626, #b91c1c);
                color: #fff;
            }

        /* Contenedor centrado de botones */
        .buttons-container {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 20px;
            margin-top: 30px;
            margin-bottom: 30px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="main-header">
            <i class="fas fa-map-marker-alt"></i> Postes de Alumbrado Público
        </div>

        <!-- Barra de control: filtro barrio + buscador (mismo estilo de Cajas) -->
        <div class="control-bar">
            <select id="barrioFilter">
                <option value="">Todos los barrios</option>
                @foreach (var b in ViewBag.Barrios as List<string>)
                {
                    <option value="@b">@b</option>
                }
            </select>

            <input type="text" id="searchInput" placeholder="Buscar por código, poste o dirección...">
            <button id="searchButton"><i class="fas fa-search"></i> Buscar</button>
        </div>

        <div class="content">
            <!-- Tabla -->
            <div class="table-card">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Latitud</th>
                            <th>Longitud</th>
                            <th>Poste</th>
                            <th>Barrio</th>
                            <th>Tipo red</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="postesTable">
                        @foreach (var p in Model)
                        {
                            <tr>
                                <td>@p.codigo</td>
                                <td>@p.latitud.ToString().Replace(',', '.')</td>
                                <td>@p.longitud.ToString().Replace(',', '.')</td>
                                <td>@p.poste</td>
                                <td>@p.barrio</td>
                                <td>@p.tipo_red</td>
                                <td class="text-center">
                                    <a href="@Url.Action("VerInfoDetallada", "Postes", new { id = p.codigo })"
                                       class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i> Ver info
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Mapa -->
            <div class="map-card">
                <div id="map"></div>
            </div>
            <!-- Botones Exportar y Atrás CENTRADOS -->
            <div class="buttons-container">
                <a href="@Url.Action("ExportarPostesExcel", "Postes")" class="btn-excel">
                    <i class="fas fa-file-excel"></i> Exportar
                </a>

                <a href="@Url.Action("inicio","login")" class="btn-back">
                    <i class="fas fa-arrow-left"></i> Atrás
                </a>
            </div>

            <!-- Scripts (alineados con Cajas) -->
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        </div>
    </div>

    <!-- Scripts (alineados con Cajas) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script>
        $(function () {
            // Inicializar mapa (centro por defecto; ajusta si quieres)
            var map = L.map('map').setView([4.732, -74.264], 14);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', { maxZoom: 19 }).addTo(map);

            function clearMarkers() {
                map.eachLayer(function (l) {
                    if (l instanceof L.Marker || l instanceof L.CircleMarker) map.removeLayer(l);
                });
            }

            // Marcadores NARANJA (igual que Cajas)
            function addMarker(lat, lng, text) {
                if (lat && lng && !isNaN(lat) && !isNaN(lng)) {
                    L.circleMarker([lat, lng], {
                        radius: 8,
                        fillColor: "#ff7a00",
                        color: "#b45309",
                        weight: 2,
                        opacity: 1,
                        fillOpacity: 0.9
                    }).addTo(map).bindPopup(text);
                }
            }

            function repaintMarkersFromVisibleRows() {
                clearMarkers();
                var any = false;
                $('#postesTable tr:visible').each(function () {
                    var lat = parseFloat($(this).find('td').eq(1).text().trim().replace(',', '.'));
                    var lng = parseFloat($(this).find('td').eq(2).text().trim().replace(',', '.'));
                    var code = $(this).find('td').eq(0).text().trim();
                    var poste = $(this).find('td').eq(3).text().trim();
                    if (!isNaN(lat) && !isNaN(lng)) {
                        addMarker(lat, lng, code + ' - ' + poste);
                        any = true;
                    }
                });
                // Si hay visibles, centra a la primera visible
                if (any) {
                    var first = $('#postesTable tr:visible').first();
                    var lat = parseFloat(first.find('td').eq(1).text().trim().replace(',', '.'));
                    var lng = parseFloat(first.find('td').eq(2).text().trim().replace(',', '.'));
                    if (!isNaN(lat) && !isNaN(lng)) map.setView([lat, lng], map.getZoom());
                }
            }

            // Pintar todos al cargar
            repaintMarkersFromVisibleRows();

            // Filtro de barrio
            $('#barrioFilter').on('change', function () {
                var barrio = $(this).val().toLowerCase();
                $('#postesTable tr').each(function () {
                    var rowText = $(this).text().toLowerCase();
                    $(this).toggle((barrio === "") || rowText.indexOf(barrio) > -1);
                });
                repaintMarkersFromVisibleRows();
            });

            // Buscador (texto libre)
            $('#searchButton').on('click', function () {
                var q = $('#searchInput').val().toLowerCase();
                $('#postesTable tr').each(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(q) > -1);
                });
                repaintMarkersFromVisibleRows();
            });

            // Enter para buscar
            $('#searchInput').on('keypress', function (e) {
                if (e.which === 13) {
                    $('#searchButton').click();
                }
            });
        });
    </script>
</body>
</html>
