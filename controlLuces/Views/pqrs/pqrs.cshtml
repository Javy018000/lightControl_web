<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear PQRS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css">

    <style>
        :root {
            --c1: #0ea5e9;
            --c2: #3b82f6;
            --bg: #f4f8fb;
            --text: #0f172a;
            --muted: #64748b;
            --card: #ffffff;
            --border: #e2e8f0;
        }

        body {
            background: var(--bg);
            font-family: 'Segoe UI', system-ui, -apple-system, Arial, sans-serif;
            color: var(--text);
        }

        .pqrs-wrapper {
            max-width: 1100px;
            margin: 24px auto 40px auto;
            padding: 0 16px 32px 16px;
        }

        .pqrs-header-main {
            background: linear-gradient(135deg, var(--c1), var(--c2));
            color: #fff;
            border-radius: 18px;
            padding: 18px 26px;
            box-shadow: 0 18px 35px rgba(15, 23, 42, 0.25);
            font-size: 24px;
            font-weight: 800;
            text-align: center;
            margin-bottom: 22px;
            text-transform: uppercase;
            letter-spacing: .08em;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .pqrs-header-main i {
            font-size: 24px;
        }

        .pqrs-card {
            background: var(--card);
            border-radius: 18px;
            border: 1px solid var(--border);
            box-shadow: 0 12px 26px rgba(15, 23, 42, .14);
            padding: 20px 22px;
        }

        .section-title {
            font-size: 16px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: .08em;
            margin: 16px 0 10px 0;
            display: flex;
            align-items: center;
            gap: 8px;
            color: #0f172a;
        }

        .section-title i {
            color: var(--c1);
        }

        .field-label {
            font-weight: 700;
            font-size: 14px;
            color: #1f2937;
            margin-bottom: 6px;
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .field-label i {
            color: var(--c2);
            font-size: 13px;
        }

        .required-mark {
            color: #ef4444;
            font-weight: 700;
            margin-left: 2px;
        }

        .form-control {
            border: 1.5px solid var(--border);
            border-radius: 10px;
            padding: 8px 12px;
            font-size: 14px;
            color: var(--text);
            background: #f8fafc;
            transition: all 0.2s ease;
        }

        .form-control:focus {
            background: white;
            border-color: var(--c2);
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }

        .form-control::placeholder {
            color: var(--muted);
        }

        select.form-control {
            cursor: pointer;
        }

        textarea.form-control {
            min-height: 100px;
            resize: vertical;
        }

        .form-control[readonly] {
            background: #f1f5f9;
            cursor: not-allowed;
            color: var(--muted);
        }

        .form-help {
            font-size: 12px;
            color: var(--muted);
            margin-top: 4px;
        }

        .pqrs-actions {
            margin-top: 22px;
            display: flex;
            justify-content: center;
            gap: 14px;
            flex-direction: column;
            align-items: center;
        }

        .btn-submit {
            border-radius: 999px;
            padding: 10px 32px;
            font-weight: 700;
            border: none;
            background: linear-gradient(135deg, var(--c1), var(--c2));
            color: #fff;
            box-shadow: 0 10px 24px rgba(59, 130, 246, .35);
            font-size: 15px;
            text-transform: uppercase;
            letter-spacing: .05em;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.2s ease;
        }

        .btn-submit:hover {
            color: #fff;
            filter: brightness(1.05);
            transform: translateY(-1px);
            box-shadow: 0 12px 28px rgba(59, 130, 246, .45);
        }

        .btn-back {
            border-radius: 999px;
            padding: 8px 24px;
            font-weight: 700;
            border: none;
            background: linear-gradient(135deg, #fb7185, #ef4444);
            color: #fff;
            box-shadow: 0 10px 24px rgba(248, 113, 113, .35);
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            font-size: 14px;
            transition: all 0.2s ease;
        }

        .btn-back:hover {
            color: #fff;
            filter: brightness(1.05);
            transform: translateY(-1px);
        }

        @@media (max-width: 768px) {
            .pqrs-card {
                padding: 16px;
            }

            .pqrs-header-main {
                font-size: 20px;
                padding: 14px 20px;
            }
        }
    </style>
</head>
<body>
    <div class="pqrs-wrapper">

        <!-- HEADER PRINCIPAL -->
        <div class="pqrs-header-main">
            <i class="fas fa-comment-alt"></i>
            CREAR PQRS
        </div>

        <!-- CARD PRINCIPAL -->
        <div class="pqrs-card">
            <form id="pqrsForm" action="@Url.Action("Enviarpqrs", "Pqrs")" method="post" enctype="multipart/form-data">

                <!-- SECCIÓN: DATOS GENERALES -->
                <h2 class="section-title">
                    <i class="fas fa-info-circle"></i> Datos Generales
                </h2>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="field-label" for="FechaRegistro">
                            <i class="fas fa-calendar-alt"></i>
                            Fecha de Registro
                            <span class="required-mark">*</span>
                        </label>
                        <input type="text" id="FechaRegistro" name="FechaRegistro" readonly class="form-control">
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="field-label" for="Canal">
                            <i class="fas fa-envelope"></i>
                            Canal
                            <span class="required-mark">*</span>
                        </label>
                        <select id="Canal" name="Canal" required class="form-control">
                            <option value="">Seleccione un canal</option>
                            <option value="Carta">Carta</option>
                            <option value="Correo">Correo</option>
                            <option value="Presencial">Presencial</option>
                            <option value="Sistema">Sistema</option>
                            <option value="Telefono">Teléfono</option>
                        </select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="field-label" for="Tipopqrs">
                            <i class="fas fa-tags"></i>
                            Tipo de PQRS
                            <span class="required-mark">*</span>
                        </label>
                        <select id="Tipopqrs" name="Tipopqrs" required class="form-control">
                            <option value="">Seleccione un tipo</option>
                            <option value="Queja">Queja</option>
                            <option value="Petición">Petición</option>
                            <option value="Reclamo">Reclamo</option>
                            <option value="Sugerencia">Sugerencia</option>
                            <option value="Felicitación">Felicitación</option>
                            <option value="Otro">Otro</option>
                        </select>
                    </div>
                </div>

                <!-- SECCIÓN: DATOS DEL USUARIO -->
                <h2 class="section-title">
                    <i class="fas fa-user"></i> Datos del Usuario
                </h2>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="field-label" for="Nombre">
                            <i class="fas fa-user"></i>
                            Nombre
                            <span class="required-mark">*</span>
                        </label>
                        <input type="text" id="Nombre" name="Nombre" placeholder="Ingrese su nombre" required class="form-control">
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="field-label" for="Apellido">
                            <i class="fas fa-user"></i>
                            Apellido
                            <span class="required-mark">*</span>
                        </label>
                        <input type="text" id="Apellido" name="Apellido" placeholder="Ingrese su apellido" required class="form-control">
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="field-label" for="TipoDoc">
                            <i class="fas fa-id-card"></i>
                            Tipo de Documento
                            <span class="required-mark">*</span>
                        </label>
                        <select id="TipoDoc" name="TipoDoc" required class="form-control">
                            <option value="">Seleccione un tipo</option>
                            <option value="Sin Datos">Sin Datos</option>
                            <option value="Cedula De Ciudadania">Cédula de Ciudadanía</option>
                            <option value="Cedula De Extranjeria">Cédula de Extranjería</option>
                            <option value="Pasaporte">Pasaporte</option>
                            <option value="Tarjeta De Identidad">Tarjeta de Identidad</option>
                            <option value="NIT">NIT</option>
                            <option value="Otro">Otro</option>
                        </select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="field-label" for="Documento">
                            <i class="fas fa-file-alt"></i>
                            Número de Documento
                            <span class="required-mark">*</span>
                        </label>
                        <input type="text" id="Documento" name="Documento" placeholder="Ingrese el número de documento" required class="form-control">
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="field-label" for="Telefono">
                            <i class="fas fa-phone"></i>
                            Teléfono
                            <span class="required-mark">*</span>
                        </label>
                        <input type="tel" id="Telefono" name="Telefono" placeholder="Ej: 3001234567" required class="form-control">
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="field-label" for="Correo">
                            <i class="fas fa-envelope"></i>
                            Correo Electrónico
                            <span class="required-mark">*</span>
                        </label>
                        <input type="email" id="Correo" name="Correo" placeholder="correo@ejemplo.com" required class="form-control">
                    </div>
                </div>

                <!-- SECCIÓN: DATOS DE AFECTACIÓN -->
                <h2 class="section-title">
                    <i class="fas fa-map-marker-alt"></i> Datos de Afectación
                </h2>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="field-label" for="Referencia">
                            <i class="fas fa-map-pin"></i>
                            Código del Elemento
                            <span class="required-mark">*</span>
                        </label>
                        <input type="text" id="Referencia" name="Referencia" placeholder="Ej: MA2000, CH0105" required class="form-control">
                        <small class="form-help">Código identificador del elemento afectado</small>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="field-label" for="TipoAlumbrado">
                            <i class="fas fa-lightbulb"></i>
                            Tipo de Alumbrado
                            <span class="required-mark">*</span>
                        </label>
                        <select id="TipoAlumbrado" name="TipoAlumbrado" required class="form-control">
                            <option value="Urbano">Urbano</option>
                            <option value="Rural">Rural</option>
                        </select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="field-label" for="DireccionAfectacion">
                            <i class="fas fa-map-marker"></i>
                            Dirección de Afectación
                            <span class="required-mark">*</span>
                        </label>
                        <input type="text" id="DireccionAfectacion" name="DireccionAfectacion" placeholder="Ej: Calle 123 # 45-67" required class="form-control">
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="field-label" for="BarrioAfectacion">
                            <i class="fas fa-map"></i>
                            Barrio de Afectación
                            <span class="required-mark">*</span>
                        </label>
                        <input type="text" id="BarrioAfectacion" name="BarrioAfectacion" placeholder="Nombre del barrio" required class="form-control">
                    </div>

                    <div class="col-12 mb-3">
                        <label class="field-label" for="DescripcionAfectacion">
                            <i class="fas fa-align-left"></i>
                            Descripción de la Afectación
                            <span class="required-mark">*</span>
                        </label>
                        <textarea id="DescripcionAfectacion" name="DescripcionAfectacion" placeholder="Describa detalladamente el problema o situación..." required class="form-control"></textarea>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="field-label" for="DatosRelacionados">
                            <i class="fas fa-link"></i>
                            Datos Relacionados
                        </label>
                        <input type="text" id="DatosRelacionados" name="DatosRelacionados" placeholder="Información adicional (opcional)" class="form-control">
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="field-label" for="Imagen">
                            <i class="fas fa-image"></i>
                            Adjuntar Imagen
                        </label>
                        <input type="file" id="Imagen" name="Imagen" accept="image/*" class="form-control">
                        <small class="form-help">Formatos permitidos: JPG, PNG (opcional)</small>
                    </div>
                </div>

            </form>
        </div>

        <!-- BOTONES -->
        <div class="pqrs-actions">
            <button type="submit" form="pqrsForm" class="btn-submit">
                <i class="fas fa-paper-plane"></i> Enviar PQRS
            </button>
            <a href="@Url.Action("inicio", "Login")" class="btn-back">
                <i class="fas fa-arrow-left"></i> Volver al Inicio
            </a>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
        // Fecha local en el input
        document.addEventListener('DOMContentLoaded', function () {
            var fechaActual = new Date();
            fechaActual.setMinutes(fechaActual.getMinutes() - fechaActual.getTimezoneOffset());
            var fechaLocal = fechaActual.toISOString().slice(0, 10);
            document.getElementById('FechaRegistro').value = fechaLocal;
        });

        // Envío con fetch + SweetAlert
        document.getElementById('pqrsForm').addEventListener('submit', function (event) {
            event.preventDefault();

            var ref = document.getElementById('Referencia').value.trim();
            if (!ref) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Falta información',
                    text: 'El campo "Código del elemento" es obligatorio.'
                });
                return;
            }

            fetch('@Url.Action("Enviarpqrs", "Pqrs")', {
                method: 'POST',
                body: new FormData(document.getElementById('pqrsForm'))
            })
                .then(response => response.json())
                .then(data => {
                    if (!data) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Respuesta inválida del servidor.'
                        });
                        return;
                    }

                    if (data.success === false) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: data.message || 'No fue posible registrar la PQRS.'
                        });
                        return;
                    }

                    const radicado = data.codigo || data.consecutivo || '—';

                    Swal.fire({
                        title: 'PQRS Creada',
                        text: 'El PQRS se ha creado correctamente. Radicado: ' + radicado,
                        icon: 'success',
                        confirmButtonText: 'Aceptar'
                    }).then(() => {
                        window.location.href = '@Url.Action("inicio", "Login")';
                    });
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire({
                        title: 'Error',
                        text: 'Ocurrió un error al crear el PQRS. Por favor, inténtalo de nuevo más tarde.',
                        icon: 'error',
                        confirmButtonText: 'Aceptar'
                    });
                });
        });
    </script>
</body>
</html>
