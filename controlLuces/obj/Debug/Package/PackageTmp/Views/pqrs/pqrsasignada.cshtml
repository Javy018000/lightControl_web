@model List<controlLuces.Models.PqrsModel>
@using controlLuces.Models

@{
    ViewBag.Title = "PQRS Asignada";
    Layout = "~/Views/Shared/_Layout.cshtml";

    Func<string, string> PrefijoMunicipio = (mun) =>
    {
        var y = DateTime.Now.Year;
        var k = (mun ?? "").Trim().ToLowerInvariant();
        if (k.Contains("madrid")) return $"MA{y}";
        if (k.Contains("chía") || k.Contains("chia")) return $"CH{y}";
        return $"LC{y}";
    };

    var muniSesion = (Session["Municipio"] as string)
                     ?? (Session["Usuario"] as UsuarioModel)?.Municipio;
    var prefijoSesion = PrefijoMunicipio(muniSesion);
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PQRS Asignada</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Product+Sans&display=swap" rel="stylesheet" />

    <style>
        :root {
            --c1: #0ea5e9;
            --c2: #3b82f6;
            --bg: #f4f8fb;
            --ink: #0f172a;
        }

        body {
            font-family: 'Product Sans',system-ui,Segoe UI,Arial,sans-serif;
            background: var(--bg);
            padding: 20px;
            color: var(--ink);
        }

        .main-header {
            background: linear-gradient(135deg,var(--c1),var(--c2));
            color: #fff;
            border-radius: 14px;
            padding: 18px 25px;
            box-shadow: 0 10px 24px rgba(2,8,23,.12);
            font-size: 28px;
            font-weight: 800;
            text-align: center;
            margin-bottom: 25px;
            text-transform: uppercase;
            letter-spacing: .6px;
        }

        .cards-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill,minmax(260px,1fr));
            gap: 18px;
        }

        .card {
            background: #fff;
            border: none;
            border-radius: 14px;
            overflow: hidden;
            box-shadow: 0 10px 22px rgba(2,8,23,.08);
            transition: transform .18s ease, box-shadow .18s ease;
        }

            .card:hover {
                transform: translateY(-3px);
                box-shadow: 0 16px 30px rgba(2,8,23,.12);
            }

        .card-header {
            background: linear-gradient(135deg,var(--c2),var(--c1));
            color: #fff;
            border: none;
            font-weight: 800;
            font-size: 18px;
        }

        .card-body p {
            margin-bottom: .45rem;
            text-align: left;
        }

        .card-footer {
            background: #fff;
            border-top: 1px solid #eef2f8;
            display: flex;
            gap: 8px;
            justify-content: center;
        }

        .btn-primary {
            background: linear-gradient(135deg,var(--c2),var(--c1));
            border: none;
            font-weight: 700;
            border-radius: 10px;
            padding: 8px 14px;
            box-shadow: 0 8px 18px rgba(59,130,246,.25);
        }

        .footer-actions {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 14px;
            margin-top: 22px;
            flex-wrap: wrap;
        }

        .btn-back {
            background: #dc3545;
            border: none;
            color: #fff;
            padding: 10px 16px;
            border-radius: 12px;
            font-weight: 700;
        }

            .btn-back:hover {
                filter: brightness(0.95);
            }
    </style>
</head>
<body>
    <div class="container-fluid px-2 px-md-3">
        <div class="main-header">
            <i class="fas fa-spinner me-2"></i> PQRS Asignada
        </div>

        <div class="cards-grid">
            @foreach (var pqrs in Model)
            {
                var radicado = !string.IsNullOrWhiteSpace(pqrs.Consecutivo)
                    ? pqrs.Consecutivo
                    : (prefijoSesion + ":" + pqrs.Idpqrs);

                <div class="card">
                    <div class="card-header">
                        @radicado
                    </div>
                    <div class="card-body">
                        <p><strong>Fecha:</strong> @pqrs.FechaRegistro</p>
                        <p><strong>Tipo:</strong> @pqrs.Tipopqrs</p>
                        <p><strong>Canal:</strong> @pqrs.Canal</p>
                        <p><strong>Dirección:</strong> @pqrs.DireccionAfectacion</p>
                        <p><strong>Descripción:</strong> @pqrs.DescripcionAfectacion</p>
                        @if (!string.IsNullOrWhiteSpace(pqrs.Cuadrilla))
                        {
                            <p><strong>Cuadrilla:</strong> @pqrs.Cuadrilla</p>
                        }
                        @if (pqrs.FechaARealizar.HasValue)
                        {
                            <p><strong>Fecha del trabajo:</strong> @pqrs.FechaARealizar.Value.ToString("dd/MM/yyyy")</p>
                        }
                    </div>
                    <div class="card-footer">
                        <a href="@Url.Action("VerInfo", "pqrs", new { id = pqrs.Idpqrs })"
                           class="btn btn-primary btn-sm">
                            <i class="fas fa-info-circle"></i> Ver Info
                        </a>
                    </div>
                </div>
            }
        </div>

        <div class="footer-actions">
            <a href="@Url.Action("inicio","login")" class="btn-back">
                <i class="fas fa-arrow-left me-1"></i> Atrás
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</body>
</html>