@model List<controlLuces.Models.inventarioModel>
@using controlLuces.Models

@{
    ViewBag.Title = "Listado de Elementos del Inventario";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var usuario = Session["Usuario"] as UsuarioModel;
    var municipioSesion = (Session["Municipio"] as string)
                          ?? usuario?.Municipio
                          ?? "";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>


    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" />

    <style>
        :root {
            --c1: #0ea5e9;
            --c2: #3b82f6;
            --bg: #f4f8fb;
            --text: #0f172a;
            --muted: #64748b;
        }

        body {
            font-family: 'Segoe UI', system-ui, -apple-system, Arial, sans-serif;
            background: var(--bg);
            color: var(--text);
        }

        
        .inv-page {
            max-width: 1200px;
            margin: 22px auto 40px auto;
            padding: 0 15px 40px 15px;
        }

    
        .inv-main-header {
            background: linear-gradient(135deg, var(--c1), var(--c2));
            color: #fff;
            border-radius: 18px;
            padding: 18px 24px;
            text-align: center;
            font-weight: 800;
            letter-spacing: .4px;
            box-shadow: 0 12px 28px rgba(2, 8, 23, .15);
            text-transform: uppercase;
            font-size: 30px;
            margin-bottom: 18px;
        }

            .inv-main-header i {
                margin-right: 8px;
            }

        .inv-top-bar {
            display: flex;
            justify-content: flex-end;
            align-items: center;
            margin-bottom: 10px;
        }

            .inv-top-bar span {
                font-size: 13px;
                color: var(--muted);
                background: #ffffff;
                padding: 6px 12px;
                border-radius: 999px;
                box-shadow: 0 4px 12px rgba(15, 23, 42, .12);
            }

            .inv-top-bar i {
                margin-right: 6px;
                color: var(--c2);
            }

      
        .inv-grid {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 24px;
        }

        .inv-card {
            background: #fff;
            border-radius: 18px;
            box-shadow: 0 10px 24px rgba(15, 23, 42, .12);
            overflow: hidden;
            width: 340px; 
            min-height: 260px;
            display: flex;
            flex-direction: column;
        }

        .inv-card-header {
            background: linear-gradient(135deg, var(--c1), var(--c2));
            color: #fff;
            padding: 14px 18px;
            font-weight: 700;
            font-size: 19px;
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

            .inv-card-header i {
                font-size: 20px;
            }

        .inv-card-body {
            padding: 14px 18px 10px 18px;
            font-size: 14px;
        }

            .inv-card-body p {
                margin-bottom: 4px;
            }

        .inv-label {
            font-weight: 600;
        }

        .inv-card-footer {
            padding: 10px 18px 16px 18px;
            display: flex;
            justify-content: center;
            gap: 12px;
        }

        /* Botones tipo PQRS pero para inventario (Editar / Eliminar) */
        .btn-inv {
            border-radius: 999px;
            padding: 8px 22px;
            font-size: 14px;
            font-weight: 700;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            box-shadow: 0 8px 18px rgba(15, 23, 42, .18);
            border: none;
        }

        .btn-inv-edit {
            background: linear-gradient(135deg, var(--c2), var(--c1));
            color: #fff;
        }

        .btn-inv-delete {
            background: #ef4444;
            color: #fff;
        }

        /* Botones inferiores tipo PQRS-actions */
        .inv-actions {
            margin-top: 26px;
            text-align: center;
        }

            .inv-actions .btn-lg {
                border-radius: 999px;
                padding: 10px 28px;
                font-weight: 700;
                font-size: 15px;
                box-shadow: 0 10px 22px rgba(15, 23, 42, .18);
            }

            .inv-actions .btn-success {
                background: #22c55e;
                border: none;
            }

            .inv-actions .btn-primary {
                background: #3b82f6;
                border: none;
            }

            .inv-actions .btn-danger {
                background: #ef4444;
                border: none;
            }

        @@media (max-width: 768px) {
            .inv-card {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="inv-page">
        <!-- Cabecera principal -->
        <div class="inv-main-header">
            <i class="fas fa-boxes"></i> INVENTARIO
        </div>

        <!-- Municipio arriba a la derecha -->
        <div class="inv-top-bar">
            @if (!string.IsNullOrWhiteSpace(municipioSesion))
            {
                <span>
                    <i class="fas fa-city"></i>Municipio: @municipioSesion
                </span>
            }
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info mt-2">
                No hay elementos de inventario para mostrar.
            </div>
        }
        else
        {
            <div class="inv-grid">
                @foreach (var elemento in Model)
                {
                    <div class="inv-card">
                        <div class="inv-card-header">
                            <i class="fas fa-box"></i>
                            @elemento.nombre_elemento
                        </div>
                        <div class="inv-card-body">
                            <p><span class="inv-label">ID:</span> @elemento.ID</p>
                            <p><span class="inv-label">Nombre:</span> @elemento.nombre_elemento</p>
                            <p><span class="inv-label">Cantidad:</span> @elemento.cantidad</p>
                            <p><span class="inv-label">Descripción:</span> @elemento.descripcion</p>
                            <p><span class="inv-label">Estado:</span> @elemento.estado</p>
                        </div>
                        <div class="inv-card-footer">
                            <button type="button"
                                    onclick="editarElemento(@elemento.ID)"
                                    class="btn-inv btn-inv-edit">
                                <i class="fas fa-edit"></i> Editar
                            </button>

                            <button type="button"
                                    onclick="eliminarElemento(@elemento.ID)"
                                    class="btn-inv btn-inv-delete">
                                <i class="fas fa-trash"></i> Eliminar
                            </button>
                        </div>
                    </div>
                }
            </div>
        }

        <!-- Botones inferiores centrados, estilo similar a PQRS -->
        <div class="inv-actions">
            <a href="@Url.Action("CrearElemento", "Inventario")"
               class="btn btn-success btn-lg me-3">
                <i class="fas fa-plus"></i> Crear
            </a>

            <a href="@Url.Action("GenerarPdf", "Inventario")"
               class="btn btn-primary btn-lg me-3">
                <i class="fas fa-file-pdf"></i> Generar PDF
            </a>

            <a href="@Url.Action("inicio", "login")"
               class="btn btn-danger btn-lg">
                <i class="fas fa-arrow-left"></i> Atrás
            </a>
        </div>
    </div>

    <!-- Scripts para SweetAlert y jQuery (misma lógica que ya tenías) -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        function editarElemento(id) {
            Swal.fire({
                title: 'Editar Elemento',
                text: '¿Estás seguro de que deseas editar este elemento?',
                icon: 'info',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Editar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '@Url.Action("EditarElemento", new { id = "__id__" })'.replace('__id__', id);
                }
            });
        }

        function eliminarElemento(id) {
            Swal.fire({
                title: 'Eliminar Elemento',
                text: '¿Estás seguro de que deseas eliminar este elemento?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '@Url.Action("EliminarElemento", new { id = "__id__" })'.replace('__id__', id);
                }
            });
        }
    </script>
</body>
</html>
