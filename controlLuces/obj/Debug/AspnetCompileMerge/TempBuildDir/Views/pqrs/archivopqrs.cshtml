@model List<controlLuces.Models.PqrsModel>
@using controlLuces.Models

@{
    ViewBag.Title = "Archivo PQRS";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var usuario = Session["Usuario"] as UsuarioModel;
    var municipioSesion = (Session["Municipio"] as string)
                          ?? usuario?.Municipio
                          ?? "";
}

<style>
    :root {
        --c1: #0ea5e9;
        --c2: #3b82f6;
        --bg: #f4f8fb;
        --text: #0f172a;
        --muted: #64748b;
    }

    body {
        font-family: 'Segoe UI', system-ui, -apple-system, Arial, sans-serif;
        background: var(--bg);
        color: var(--text);
    }

    .pqrs-page {
        max-width: 1200px;
        margin: 22px auto 40px auto;
        padding: 0 15px 40px 15px;
    }

    .pqrs-main-header {
        background: linear-gradient(135deg, var(--c1), var(--c2));
        color: #fff;
        border-radius: 18px;
        padding: 18px 24px;
        text-align: center;
        font-weight: 800;
        letter-spacing: .4px;
        box-shadow: 0 12px 28px rgba(2, 8, 23, .15);
        text-transform: uppercase;
        font-size: 30px;
        margin-bottom: 18px;
    }

        .pqrs-main-header i {
            margin-right: 8px;
        }

    .pqrs-top-bar {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        margin-bottom: 14px;
    }

        .pqrs-top-bar span {
            font-size: 13px;
            color: var(--muted);
            background: #ffffff;
            padding: 6px 12px;
            border-radius: 999px;
            box-shadow: 0 4px 12px rgba(15, 23, 42, .12);
        }

        .pqrs-top-bar i {
            margin-right: 6px;
            color: var(--c2);
        }

    /* Card de filtros/búsqueda */
    .pqrs-filter-card {
        background: #ffffff;
        border-radius: 18px;
        box-shadow: 0 10px 24px rgba(15, 23, 42, .10);
        padding: 18px 20px 14px 20px;
        margin-bottom: 18px;
    }

    .pqrs-filter-title {
        font-weight: 700;
        font-size: 16px;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        gap: 8px;
        color: var(--text);
    }

        .pqrs-filter-title i {
            color: var(--c2);
        }

    .pqrs-filter-card .input-group-text {
        font-size: 13px;
    }

    .btn {
        font-family: 'Segoe UI', system-ui, -apple-system, Arial, sans-serif;
        transition: all 0.25s ease;
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--c2), var(--c1));
        border: none;
        color: #fff;
        border-radius: 999px;
        padding-inline: 20px;
        box-shadow: 0 8px 18px rgba(37, 99, 235, .35);
    }

        .btn-primary:hover {
            filter: brightness(0.95);
            transform: translateY(-1px);
            box-shadow: 0 10px 22px rgba(15, 23, 42, .22);
        }

    .btn-excel {
        background-color: #217346;
        border-color: #217346;
        color: #fff;
        border-radius: 999px;
        padding-inline: 20px;
        box-shadow: 0 8px 18px rgba(15, 23, 42, .18);
    }

        .btn-excel:hover {
            background-color: #1a5a34;
            border-color: #1a5a34;
            color: #fff;
            transform: translateY(-1px);
        }

    .btn-back {
        background-color: #dc3545;
        border-color: #dc3545;
        color: #fff;
        border-radius: 999px;
        padding-inline: 20px;
        box-shadow: 0 8px 18px rgba(15, 23, 42, .18);
    }

        .btn-back:hover {
            background-color: #c82333;
            border-color: #bd2130;
            color: #fff;
            transform: translateY(-1px);
        }

    /* Tabla estilo tarjeta */
    .pqrs-table-card {
        background: #ffffff;
        border-radius: 18px;
        box-shadow: 0 10px 24px rgba(15, 23, 42, .10);
        padding: 14px 18px 18px 18px;
    }

    .pqrs-table-wrapper {
        width: 100%;
        overflow-x: auto;
        border-radius: 12px;
    }

    table.table {
        margin-bottom: 0;
        background: #ffffff;
        border-radius: 12px;
        overflow: hidden;
    }

        table.table thead {
            background: linear-gradient(135deg, var(--c1), var(--c2));
            color: #ffffff;
            font-size: 13px;
        }

            table.table thead th {
                border: none;
                white-space: nowrap;
            }

        table.table tbody td {
            font-size: 13px;
            vertical-align: middle;
        }

        table.table tbody tr:nth-child(even) {
            background-color: #f9fafb;
        }

    .button-container {
        text-align: center;
        margin-top: 18px;
        display: flex;
        justify-content: center;
        gap: 12px;
        flex-wrap: wrap;
    }

    @@media (max-width: 768px) {
        .pqrs-page {
            padding-inline: 10px;
        }
    }
</style>

<div class="pqrs-page">
    <!-- Cabecera principal tipo MostrarPQRS -->
    <div class="pqrs-main-header">
        <i class="fas fa-search"></i> Archivo / Búsqueda de PQRS
    </div>

    <!-- Municipio arriba a la derecha -->
    <div class="pqrs-top-bar">
        @if (!string.IsNullOrWhiteSpace(municipioSesion))
        {
            <span>
                <i class="fas fa-city"></i>Municipio: @municipioSesion
            </span>
        }
    </div>

    <!-- Card de filtros/búsqueda -->
    <div class="pqrs-filter-card">
        <div class="pqrs-filter-title">
            <i class="fas fa-filter"></i> Filtrar PQRS
        </div>

        <form method="post" action="@Url.Action("BuscarPqrs", "pqrs")">
            <div class="input-group mb-3">
                <select id="tipoBusqueda" name="tipoBusqueda" class="form-control">
                    <option value="">Seleccionar tipo de búsqueda</option>
                    <option value="consecutivo">Por Consecutivo</option>
                    <option value="fecha">Por Fecha</option>
                </select>
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search mr-1"></i>Buscar
                    </button>
                </div>
            </div>

            <div id="rangoFecha" style="display: none;">
                <div class="input-group mb-3">
                    <input type="date" id="desde" name="desde" class="form-control">
                    <div class="input-group-append">
                        <span class="input-group-text">Desde</span>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input type="date" id="hasta" name="hasta" class="form-control">
                    <div class="input-group-append">
                        <span class="input-group-text">Hasta</span>
                    </div>
                </div>
            </div>

            <div id="campoConsecutivo" style="display: none;">
                <div class="input-group mb-3">
                    <input type="text" id="Idpqrs" name="Idpqrs" class="form-control" placeholder="Ej: MA2025:123">
                    <div class="input-group-append">
                        <span class="input-group-text">Número de Consecutivo</span>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <!-- Tabla de resultados en card -->
    <div class="pqrs-table-card mt-3">
        <div class="pqrs-table-wrapper">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Consecutivo</th>
                        <th>Fecha</th>
                        <th>Tipo</th>
                        <th>Canal</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Tipo Doc</th>
                        <th>Documento</th>
                        <th>Teléfono</th>
                        <th>Correo</th>
                        <th>Referencia</th>
                        <th>Dirección</th>
                        <th>Tipo Alumbrado</th>
                        <th>Descripción</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var pqrs in Model)
                        {
                            <tr>
                                <td>@pqrs.Consecutivo</td>
                                <td>@pqrs.FechaRegistro</td>
                                <td>@pqrs.Tipopqrs</td>
                                <td>@pqrs.Canal</td>
                                <td>@pqrs.Nombre</td>
                                <td>@pqrs.Apellido</td>
                                <td>@pqrs.TipoDoc</td>
                                <td>@pqrs.Documento</td>
                                <td>@pqrs.Telefono</td>
                                <td>@pqrs.Correo</td>
                                <td>@pqrs.Referencia</td>
                                <td>@pqrs.DireccionAfectacion</td>
                                <td>@pqrs.TipoAlumbrado</td>
                                <td>@pqrs.DescripcionAfectacion</td>
                                <td>@pqrs.EstadoNombre</td>
                                <td>
                                    <a href="@Url.Action("verInfo", "Pqrs", new { id = pqrs.Idpqrs })"
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-info-circle"></i> Ver Info
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="16" class="text-center">No hay datos disponibles.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Botones inferiores -->
    <div class="button-container">
        <button class="btn btn-excel">
            <i class="fas fa-file-excel mr-2"></i> Exportar
        </button>
        <a href="@Url.Action("Index", "Home")" class="btn btn-back">
            <i class="fas fa-arrow-left mr-2"></i> Atrás
        </a>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var tipoBusqueda = document.getElementById('tipoBusqueda');
        var rangoFecha = document.getElementById('rangoFecha');
        var campoConsecutivo = document.getElementById('campoConsecutivo');

        tipoBusqueda.addEventListener('change', function () {
            if (this.value === 'fecha') {
                rangoFecha.style.display = 'block';
                campoConsecutivo.style.display = 'none';
            } else if (this.value === 'consecutivo') {
                rangoFecha.style.display = 'none';
                campoConsecutivo.style.display = 'block';
            } else {
                rangoFecha.style.display = 'none';
                campoConsecutivo.style.display = 'none';
            }
        });

        // Exportar a Excel (misma lógica)
        document.querySelector('.btn-excel').addEventListener('click', function (e) {
            e.preventDefault();

            var wb = XLSX.utils.book_new();
            var ws = XLSX.utils.table_to_sheet(document.querySelector('.table'));

            XLSX.utils.book_append_sheet(wb, ws, 'PQRS');
            XLSX.writeFile(wb, 'PQRS.xlsx');
        });
    });
</script>
