@{
    Layout = null;
}
@model List<controlLuces.Models.CuadrillaModel>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expansión - Orden de Servicio</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

    <style>
        :root {
            --c1: #0ea5e9;
            --c2: #3b82f6;
            --bg: #f4f8fb;
            --text: #0f172a;
            --muted: #64748b;
        }

        body {
            font-family: 'Segoe UI', system-ui, -apple-system, Arial, sans-serif;
            background: var(--bg);
            color: var(--text);
        }

        .orden-container {
            max-width: 1200px;
            margin: 16px auto 16px auto;
            padding: 0 15px 20px 15px;
        }

        .orden-title-chip {
            background: linear-gradient(135deg, #0ea5e9, #3b82f6);
            color: #ffffff;
            border-radius: 30px;
            padding: 14px 24px;
            text-align: center;
            text-transform: uppercase;
            font-weight: 800;
            font-size: 20px;
            letter-spacing: .4px;
            margin-bottom: 18px;
            box-shadow: 0 10px 24px rgba(15, 23, 42, .18);
        }

            .orden-title-chip i {
                margin-right: 8px;
            }

        .register-form {
            width: 100%;
        }

        .form-content {
            background: #ffffff;
            padding: 18px 22px 18px 22px;
            border-radius: 18px;
            box-shadow: 0 10px 24px rgba(15, 23, 42, .12);
            color: var(--text);
            margin-bottom: 16px;
        }

        .form-group {
            margin-bottom: 14px;
        }

            .form-group label {
                font-weight: 600;
                font-size: 15px;
                color: var(--muted);
                display: block;
                margin-bottom: 6px;
            }

            .form-group .required::after {
                content: '*';
                color: #ef4444;
                margin-left: 4px;
            }

            .form-group input,
            .form-group select,
            .form-group textarea {
                width: 100%;
            }

        .form-control {
            border-radius: 16px;
            border: 1px solid #e2e8f0;
            background: #f9fafb;
            font-size: 15px;
            padding: 10px 14px;
            transition: all .15s ease;
        }

            .form-control:focus {
                border-color: var(--c2);
                box-shadow: 0 0 0 3px rgba(59, 130, 246, .25);
                background: #ffffff;
            }

        input.form-control,
        select.form-control {
            height: 44px;
        }

        textarea.form-control {
            border-radius: 16px;
            min-height: 120px;
            resize: vertical;
        }

        .orden-actions {
            margin-top: 18px;
            display: flex;
            justify-content: center;
            gap: 18px;
        }

        .btn-pill {
            border-radius: 999px;
            padding: 8px 26px;
            font-size: 15px;
            font-weight: 700;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            box-shadow: 0 8px 18px rgba(15, 23, 42, .18);
            border: none;
        }

        .btn-orden {
            background: #22c55e;
            color: #052e16;
        }

            .btn-orden:hover {
                background: #16a34a;
                color: #052e16;
            }

        .btn-atras {
            background: linear-gradient(135deg, #fb7185, #ef4444);
            color: #ffffff;
            box-shadow: 0 10px 22px rgba(248,113,113,.34);
            text-decoration: none;
        }

        .btn-atras:hover {
            filter: brightness(1.05);
            transform: translateY(-1px);
            color: #ffffff;
        }

        @@media (max-width: 768px) {
            .form-content {
                padding: 14px 14px 14px 14px;
            }

            .orden-actions {
                flex-direction: column;
                align-items: center;
            }
        }
    </style>

    <script>
        $(document).ready(function () {
            $('form').submit(function (event) {
                event.preventDefault();
                $.ajax({
                    url: $(this).attr('action'),
                    type: $(this).attr('method'),
                    data: $(this).serialize(),
                    success: function (response) {
                        if (response.success) {
                            var rad = response.consecutivo || (response.prefijo ? (response.prefijo + ':' + response.ordenId) : response.ordenId);
                            var radicado = String(rad || '').replace(':', '-');
                            Swal.fire({
                                title: 'Orden Generada Correctamente',
                                text: 'El radicado es: ' + radicado,
                                icon: 'success',
                                confirmButtonText: 'OK'
                            }).then((r) => {
                                if (r.isConfirmed) window.location.href = '@Url.Action("inicio", "Login")';
                            });
                        } else {
                            Swal.fire({ title: 'Error', text: response.message, icon: 'error', confirmButtonText: 'OK' });
                        }
                    },
                    error: function (xhr) {
                        console.error(xhr.responseText);
                        Swal.fire({ title: 'Error', text: 'Ocurrió un problema al crear la orden.', icon: 'error' });
                    }
                });
            });
        });
    </script>
</head>
<body>
    <div class="orden-container">

        <div class="orden-title-chip">
            <i class="fas fa-bolt"></i>
            EXPANSIÓN
        </div>

        <form action="@Url.Action("insertarOrdenMon", "Ordenes")" method="post">
            <div class="register-form">

                <!-- BLOQUE 1: Tipo / Código -->
                <div class="form">
                    <div class="form-content">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="required">Tipo De Elemento:</label>
                                    <select name="TipoDeElemento" class="form-control" required>
                                        <option value="">Seleccione</option>
                                        <option value="Luminaria Led">Luminaria</option>
                                        <option value="Transformador">Transformador</option>
                                        <option value="Caja">Cajas</option>
                                        <option value="Poste">Poste</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="required">Código Del Elemento</label>
                                    <input type="text"
                                           name="CodigoDeElemento"
                                           class="form-control"
                                           value="@ViewBag.CodigoElemento"
                                           placeholder="" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- BLOQUE 2 -->
                <div class="form">
                    <div class="form-content">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <!-- ✅ SOLO SE MUESTRA EL CÓDIGO DE LA PQRS (visible) -->
                                <div class="form-group">
                                    <label class="required">PQRS relacionada:</label>
                                    <input type="text"
                                           class="form-control"
                                           value="@ViewBag.CodigoPqrs"
                                           readonly />
                                </div>
                                <!-- ✅ ID INTERNO DE LA PQRS (oculto con hidden) -->
                                <input type="hidden"
                                       name="ElementoRelacionado"
                                       value="@ViewBag.IdPqrs" />
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="required">Problema Valido:</label>
                                    <select name="ProblemaValidado" class="form-control" required>
                                        <option value="Si">Si</option>
                                        <option value="No">No</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="required">Problema Relacionado:</label>
                                    <textarea name="ProblemaRelacionado"
                                              class="form-control"
                                              readonly>@ViewBag.descripcionAfectacion</textarea>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="required">Tipo De Solucion:</label>
                                    <select name="TipoDeSolucion" class="form-control" required>
                                        <option value="Sin Recomendacion">Sin Recomendacion</option>
                                        <option value="Regular">Regular</option>
                                        <option value="Intercambio">Intercambio</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label class="required">Cuadrilla:</label>
                                    <select name="Cuadrilla" class="form-control" required>
                                        @foreach (var cuadrilla in Model)
                                        {
                                            <option value="@cuadrilla.Nombre">@cuadrilla.Nombre</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="required">Orden Prioridad:</label>
                                    <select name="OrdenPrioridad" class="form-control" required>
                                        <option value="">Seleccione</option>
                                        <option value="Baja">Baja</option>
                                        <option value="Media">Media</option>
                                        <option value="Alta">Alta</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Fecha a Realizar:</label>
                                    <input type="date" name="FechaARealizar" class="form-control" />
                                </div>
                            </div>
                        </div>

                        <div class="orden-actions">
                            <button type="submit" class="btn-pill btn-orden">
                                <i class="fas fa-check-circle"></i>
                                Generar Nueva Orden
                            </button>

                            <a href="@Url.Action("inicio", "Login")" class="btn-pill btn-atras">
                                <i class="fas fa-arrow-left"></i>
                                Atrás
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>
</body>
</html>