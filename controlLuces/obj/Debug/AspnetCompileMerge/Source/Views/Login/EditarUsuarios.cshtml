@model controlLuces.Models.UsuarioModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Editar Usuario - Light Control</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

    <style>
        body {
            font-family: 'Segoe UI', Arial, sans-serif;
            background-color: #f4f8fb;
            padding: 30px;
        }

        .main-header {
            background: linear-gradient(135deg, #0ea5e9, #3b82f6);
            color: #fff;
            border-radius: 14px;
            padding: 18px 25px;
            box-shadow: 0 10px 24px rgba(2, 8, 23, 0.12);
            font-size: 26px;
            font-weight: 800;
            text-align: center;
            margin-bottom: 30px;
            text-transform: uppercase;
            letter-spacing: .6px;
        }

        .form-card {
            background: #fff;
            border-radius: 14px;
            box-shadow: 0 8px 22px rgba(2, 8, 23, 0.08);
            padding: 30px 40px;
            max-width: 850px;
            margin: 0 auto;
        }

        label {
            font-weight: 600;
            color: #334155;
        }

        input.form-control, select.form-control {
            border-radius: 10px;
            border: 1px solid #dbe6f5;
            box-shadow: 0 2px 6px rgba(2, 8, 23, 0.05) inset;
            transition: 0.2s;
        }

            input.form-control:focus, select.form-control:focus {
                border-color: #3b82f6;
                box-shadow: 0 0 0 3px rgba(59, 130, 246, .15);
            }

        .btn-guardar {
            background: linear-gradient(135deg, #3b82f6, #0ea5e9);
            border: none;
            color: #fff;
            font-weight: 700;
            padding: 12px 25px;
            border-radius: 12px;
            cursor: pointer;
            transition: .15s;
            box-shadow: 0 10px 18px rgba(59,130,246,.22);
            width: 100%;
        }

            .btn-guardar:hover {
                transform: translateY(-1px);
                box-shadow: 0 14px 22px rgba(59,130,246,.28);
            }

        .btn-cancelar {
            background: #e5e7eb;
            border: none;
            color: #111827;
            font-weight: 600;
            padding: 12px 25px;
            border-radius: 12px;
            width: 100%;
            transition: .15s;
        }

            .btn-cancelar:hover {
                background: #d1d5db;
                transform: translateY(-1px);
            }

        .btn-group {
            display: flex;
            gap: 15px;
            margin-top: 25px;
        }

        @@media (max-width: 768px) {
            .btn-group {
                flex-direction: column;
            }
        }

        .asterisco {
            color: orange;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="main-header">
            <i class="fas fa-user-edit"></i> Editar Usuario
        </div>

        <div class="form-card">
            <form method="post" action="@Url.Action("EditarUsuario","Login", new { id = Model.IdUsuario })">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label>Id Usuario</label>
                        <input class="form-control" value="@Model.IdUsuario" readonly />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label>Nombre <span class="asterisco">*</span></label>
                        <input name="Nombre" class="form-control" value="@Model.Nombre" required />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label>Apellido <span class="asterisco">*</span></label>
                        <input name="Apellido" class="form-control" value="@Model.Apellido" required />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>Correo <span class="asterisco">*</span></label>
                        <input name="Correo" type="email" class="form-control" value="@Model.Correo" required />
                    </div>
                    <div class="col-md-3 mb-3">
                        <label>Clave <span class="asterisco">*</span></label>
                        <input name="Clave" class="form-control" value="@Model.Clave" required />
                    </div>
                    <div class="col-md-3 mb-3">
                        <label id="lblMunicipio">Municipio</label>
                        <select name="Municipio" class="form-control">
                            <option value="">Seleccionar</option>
                            <option value="Chía" @(string.Equals(Model.Municipio, "Chía", System.StringComparison.OrdinalIgnoreCase) || string.Equals(Model.Municipio, "Chia", System.StringComparison.OrdinalIgnoreCase) ? "selected" : "")>Chía</option>
                            <option value="Madrid" @(string.Equals(Model.Municipio, "Madrid", System.StringComparison.OrdinalIgnoreCase) ? "selected" : "")>Madrid</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <label>Rol <span class="asterisco">*</span></label>
                    <select name="IdRol" class="form-control" required>
                        <option value="1" @(Model.IdRol == controlLuces.Models.Rol.Administrador ? "selected" : "")>Administrador</option>
                        <option value="2" @(Model.IdRol == controlLuces.Models.Rol.Tecnico ? "selected" : "")>Técnico</option>
                        <option value="3" @(Model.IdRol == controlLuces.Models.Rol.Usuario ? "selected" : "")>Usuario</option>
                        <option value="4" @(Model.IdRol == controlLuces.Models.Rol.Administrador_Local ? "selected" : "")>Administrador_Local</option>
                    </select>
                </div>

                <div class="btn-group">
                    <button type="submit" class="btn btn-guardar">
                        <i class="fas fa-save"></i> Guardar Cambios
                    </button>
                    <a href="@Url.Action("Usuarios","Login")" class="btn btn-cancelar">
                        <i class="fas fa-arrow-left"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Requerir Municipio solo para Administrador_Local (valor 4)
        (function () {
            const rol = document.querySelector('select[name="IdRol"]');
            const muni = document.querySelector('select[name="Municipio"]');
            const lbl = document.getElementById('lblMunicipio');

            function toggleReq() {
                const isLocal = rol.value === '4';
                muni.required = isLocal;
                if (lbl) {
                    lbl.innerHTML = 'Municipio' + (isLocal ? ' <span class="asterisco">*</span>' : '');
                }
            }
            rol.addEventListener('change', toggleReq);
            toggleReq();
        })();
    </script>
</body>
</html>
