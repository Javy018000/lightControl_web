@model controlLuces.Models.CajaModel
@{
    // Strings (null-safe)
    var codigoCajaId = Model?.Codigo_CajaID ?? "N/A";
    var idCaja = Model?.ID_CAJA ?? "N/A";
    var codigoPoste = Model?.Codigo_Poste ?? "N/A";
    var codigoCaja = Model?.Codigo_Caja ?? "N/A";
    var idApoyoLum = Model?.ID_Apoyo_Lum ?? "N/A";
    var idTransfLum = Model?.ID_Tranformador_LUM ?? "N/A";
    var conectadoCon = Model?.Conectado_Con ?? "N/A";
    var ducteria = Model?.Ducteria ?? "N/A";
    var barrio = Model?.BARRIO ?? "N/A";
    var direccion = Model?.DIRECCION ?? "N/A";
    var archivo = Model?.Archivo ?? "N/A";
    var observaciones = Model?.Observaciones ?? "N/A";

    // Números (null-safe) → string invariante para JS/Leaflet
    var latitudStr = Model?.Latitud?.ToString(System.Globalization.CultureInfo.InvariantCulture) ?? "0.000000";
    var longitudStr = Model?.Longitud?.ToString(System.Globalization.CultureInfo.InvariantCulture) ?? "0.000000";
    var interdistStr = Model?.Interdistancia?.ToString() ?? "N/A";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ver Info Caja</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Product+Sans&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />

    <style>
        body {
            background: linear-gradient(to bottom, #87CEEB, #007bff);
            font-family: 'Product Sans', sans-serif;
            padding-top: 40px;
            color: #333;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            text-align: center;
        }

        .container {
            width: 80%;
            margin: 0 auto 20px;
            text-align: center;
        }

        .card {
            background: #fff;
            box-shadow: 0 0 20px rgba(0,0,0,.15);
            border-radius: 10px;
            overflow: hidden;
            margin-bottom: 20px;
        }

        .card-header {
            background: #007bff;
            color: #fff;
            font-weight: 700;
            font-size: 24px;
            padding: 10px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,.15);
            margin-bottom: 20px;
        }

        .card-body {
            padding: 20px;
        }

        .form-group {
            margin-bottom: 15px;
            text-align: left;
        }

            .form-group label {
                font-weight: 600;
            }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            color: #495057;
            border: 1px solid #ced4da;
            border-radius: 5px;
        }

        .btn {
            display: inline-block;
            padding: 7px 13px;
            font-size: 16px;
            font-weight: 700;
            border-radius: 5px;
            color: #fff;
            background: #dc3545;
            border: 1px solid transparent;
            transition: .3s;
            margin: 5px;
        }

            .btn:hover {
                background: #c82333;
            }

        .btn-block {
            display: block;
            width: 120px;
            margin: 0 auto;
        }

        .map-container {
            margin-top: 20px;
            width: 100%;
            height: 320px;
        }

        #map {
            width: 100%;
            height: 100%;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,.15);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h2 class="mb-0"><i class="fas fa-info-circle mr-2"></i>Detalle de Caja</h2>
            </div>

            <div class="card-body">
                <form>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Código Caja ID:</label>
                                <input class="form-control" value="@codigoCajaId" readonly />
                            </div>
                            <div class="form-group">
                                <label>ID Caja:</label>
                                <input class="form-control" value="@idCaja" readonly />
                            </div>
                            <div class="form-group">
                                <label>Código Poste:</label>
                                <input class="form-control" value="@codigoPoste" readonly />
                            </div>
                            <div class="form-group">
                                <label>Código Caja:</label>
                                <input class="form-control" value="@codigoCaja" readonly />
                            </div>
                            <div class="form-group">
                                <label>ID Apoyo Lum:</label>
                                <input class="form-control" value="@idApoyoLum" readonly />
                            </div>
                            <div class="form-group">
                                <label>ID Transformador LUM:</label>
                                <input class="form-control" value="@idTransfLum" readonly />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Latitud:</label>
                                <input class="form-control" value="@latitudStr" readonly />
                            </div>
                            <div class="form-group">
                                <label>Longitud:</label>
                                <input class="form-control" value="@longitudStr" readonly />
                            </div>
                            <div class="form-group">
                                <label>Interdistancia:</label>
                                <input class="form-control" value="@interdistStr" readonly />
                            </div>
                            <div class="form-group">
                                <label>Conectado con:</label>
                                <input class="form-control" value="@conectadoCon" readonly />
                            </div>
                            <div class="form-group">
                                <label>Ductería:</label>
                                <input class="form-control" value="@ducteria" readonly />
                            </div>
                            <div class="form-group">
                                <label>Barrio:</label>
                                <input class="form-control" value="@barrio" readonly />
                            </div>
                        </div>
                    </div>

                    <div class="form-group" style="text-align:left;">
                        <label>Dirección:</label>
                        <input class="form-control" value="@direccion" readonly />
                    </div>

                    <div class="form-group" style="text-align:left;">
                        <label>Archivo:</label>
                        <input class="form-control" value="@archivo" readonly />
                    </div>

                    <div class="form-group" style="text-align:left;">
                        <label>Observaciones:</label>
                        <textarea class="form-control" rows="3" readonly>@observaciones</textarea>
                    </div>

                    <div class="map-container"><div id="map"></div></div>

                    <a href="@Url.Action("vertodascajas", "Cajas")" class="btn btn-danger btn-block">
                        <i class="fas fa-arrow-left mr-2"></i>Atrás
                    </a>
                </form>
            </div>
        </div>
    </div>

    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // OJO: usamos strings formateadas invariablemente y las convertimos a número en JS
            var lat = parseFloat("@latitudStr");
            var lng = parseFloat("@longitudStr");

            var map = L.map('map').setView([lat, lng], 16);

            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19
            }).addTo(map);

            var popupContent = `
                <b>Código Caja ID:</b> @codigoCajaId<br>
                <b>Código Caja:</b> @codigoCaja<br>
                <b>Código Poste:</b> @codigoPoste<br>
                <b>Barrio:</b> @barrio<br>
                <b>Dirección:</b> @direccion
            `;

            L.marker([lat, lng]).addTo(map)
                .bindPopup(popupContent)
                .openPopup();
        });
    </script>
</body>
</html>
