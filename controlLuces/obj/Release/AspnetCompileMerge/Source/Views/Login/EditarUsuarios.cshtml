﻿@model controlLuces.Models.UsuarioModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Editar usuario</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body class="p-4">
    <div class="container" style="max-width:820px">
        <h3 class="mb-4">Editar usuario</h3>

        <form method="post" action="@Url.Action("EditarUsuario","Login", new { id = Model.IdUsuario })">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label>IdUsuario</label>
                    <input class="form-control" value="@Model.IdUsuario" readonly />
                </div>
                <div class="form-group col-md-4">
                    <label>Nombre</label>
                    <input name="Nombre" class="form-control" value="@Model.Nombre" required />
                </div>
                <div class="form-group col-md-4">
                    <label>Apellido</label>
                    <input name="Apellido" class="form-control" value="@Model.Apellido" required />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Correo</label>
                    <input name="Correo" type="email" class="form-control" value="@Model.Correo" required />
                </div>
                <div class="form-group col-md-3">
                    <label>Clave</label>
                    <input name="Clave" class="form-control" value="@Model.Clave" required />
                </div>
                <div class="form-group col-md-3">
                    <label>Municipio</label>
                    <select name="Municipio" class="form-control" required>
                        <option value="">Seleccionar</option>
                        <option value="Chía" @(string.Equals(Model.Municipio, "Chía", System.StringComparison.OrdinalIgnoreCase) ? "selected" : "")>Chía</option>
                        <option value="Madrid" @(string.Equals(Model.Municipio, "Madrid", System.StringComparison.OrdinalIgnoreCase) ? "selected" : "")>Madrid</option>
                    </select>
                </div>

            </div>

            <div class="form-group">
                <label>Rol</label>
                <select name="IdRol" class="form-control" required>
                    <option value="1" @(Model.IdRol == controlLuces.Models.Rol.Administrador ? "selected" : "")>Administrador</option>
                    <option value="2" @(Model.IdRol == controlLuces.Models.Rol.Tecnico ? "selected" : "")>Tecnico</option>
                    <option value="3" @(Model.IdRol == controlLuces.Models.Rol.Usuario ? "selected" : "")>Usuario</option>
                </select>
            </div>

            <button class="btn btn-primary">Guardar cambios</button>
            <a class="btn btn-secondary" href="@Url.Action("Usuarios","Login")">Cancelar</a>
        </form>
    </div>
</body>
</html>
